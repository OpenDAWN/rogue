#root {
  background: rgb(130, 130, 130);  
}

#logo {
  background-image: url(styles/logo-white.png);
  background-position: bottom right;
}

QGroupBox, QTabBar::tab, QLabel, QComboBox, QDoubleSpinBox, QPushButton {
  font-size: 12px;
}

QGroupBox, #mainTab::pane, #sideTab::pane {
  background: rgb(220, 220, 220);
  padding-top: 10px;
  font-weight: bold;
  spacing: 20;
  border: 1px solid rgb(220, 220, 220);
  border-radius: 5px;
}

#mainTab::pane {
  border-bottom-left-radius: 1px;
}

#sideTab::pane {
  border-top-left-radius: 1px;
}

QGroupBox::title {
  padding: 2px;
}

*[top=true] QGroupBox {
  background: rgb(255, 255, 255);
  border: 1px solid rgb(255, 255, 255);
}

QGroupBox::indicator:checked, QRadioButton:indicator:checked {
  image: url(styles/check_selected.png); 
}

QGroupBox::indicator:unchecked, QRadioButton:indicator:unchecked {
  image: url(styles/check_unselected.png); 
}

*[top=true] QGroupBox::title {
  subcontrol-origin: margin;
  subcontrol-position: top right;
}

#effects QGroupBox::title {
  subcontrol-position: top left;
}

*[top=true] QGroupBox QLabel {
  qproperty-alignment: AlignCenter;
}

*[top=true] QGroupBox QFrame {
  background: rgb(220, 220, 220);
  border: solid 1px rgb(180, 180, 180);
}

*[top=true] QGroupBox QLabel  {
  background: transparent;
}

#oscillators > QLabel, #filters >  QLabel, #lfos > QLabel, #envs1 > QLabel, #envs2 > QLabel, #mixer > QLabel {
  qproperty-alignment: AlignTop;
  font-weight: bold;  
}

*[top=true] QGroupBox {
  padding-top: -5px;
}

QTabBar::tab {
   color: white;
 }

QTabBar::tab:selected {
   color: black;
}

 #mainTab QTabBar::tab:selected {
   background: rgb(220, 220, 220);
   border: 1px solid rgb(220, 220, 220);
   border-bottom-left-radius: 5px;
   border-bottom-right-radius: 5px;
 } 
 
 #sideTab QTabBar::tab:selected {
   background: rgb(220, 220, 220);
   border: 1px solid rgb(220, 220, 220);
   border-top-left-radius: 5px;
   border-top-right-radius: 5px;
 }

#effects QGroupBox {
  padding-top: 10px;
  padding-right: 3px;
}

