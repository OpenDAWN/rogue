/* labels */

QLabel {
  background: transparent;
  padding: 0;
  margin: 0;
}

QLabel[num=true] {
  font-size: 11px;
}

/* dials */

QDial {
  background-image: url(styles/knob.png);
  padding: 0;
  margin: 0;
}

/* push button */

QPushButton {
  background: transparent;
  border: none;  
  color: rgb(128,128,128);
}

QPushButton:checked {
  color: rgb(0,0,0);
}

/* combobox */

QComboBox {
  background: transparent;
  border: none;
  max-width: 80px;
}

#mod QComboBox {
  max-width: 100px;
}

QComboBox::down-arrow {  
  image: url(styles/arrow_down.png);  
}

QComboBox::drop-down {
  /*border: none;*/
}

#mainTab::pane {
  margin-top: -10px;
}

/* spinbox */

QDoubleSpinBox {
  background: transparent;
  max-width: 50px;
  max-height: 30px;
}

/* tabs */

QTabWidget {
  background: transparent;
}

QTabWidget::pane {
  background: transparent;
  border: 0;    
}

QTabBar {
  background: transparent;  
  padding: 0px;
  margin: 0px;
}

QTabBar::tab {
  background: transparent;  
  padding: 4px;
  margin: 2x;
}

QTabBar::tab:selected {
  font-weight: bold;
}

